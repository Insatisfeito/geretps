._login-page
  min-height: 100%
  min-width: 100%
  background-image : url(<%= asset_path "login-bg.jpg" %>)
  position: absolute
  background-repeat: no-repeat
  background-size: cover

  .single-widget-container
    left: 0
    top: 0
    margin-top: 15%
    position: relative

._footer
  background: url(<%= asset_path "footer_bg.jpg" %>) 0 0 repeat
  min-height: 150px
  margin-top: 15%
  color: #fff
  padding-top: 35px

._main-header
  min-height: 86px
  z-index: 9999
  width: 100%
  position: relative
  background: #323B44
  -webkit-box-shadow: 0 3px 3px -3px rgba(0,0,0,0.2)
  box-shadow: 0 3px 3px -3px rgba(0,0,0,0.2)

.logo
  background-image: url(<%= asset_path "logo-gtps.png" %>)
  background-size: contain
  background-repeat: no-repeat
  height: 60px
  width: 60px
