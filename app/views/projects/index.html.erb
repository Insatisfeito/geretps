<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Begin date</th>
      <th>End date</th>
      <th>Public</th>
      <th>Grades</th>
      <th>Open</th>
      <th>Max elems</th>
      <th>Min elems</th>
      <th>Subject</th>
      <th>Projects</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.begin_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.public %></td>
        <td><%= project.grades %></td>
        <td><%= project.open %></td>
        <td><%= project.max_elems %></td>
        <td><%= project.min_elems %></td>
        <td><%= project.subject %></td>
        <td><%= project.projects %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

